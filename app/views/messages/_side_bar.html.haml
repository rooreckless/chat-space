.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__username
        = current_user.name
      .side-bar__header__box__menu
        = link_to new_group_path do
          = icon('far','edit')
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas','cog')
          %span<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group.id) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message